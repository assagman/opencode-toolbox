{
  "mcp": {
    "gmail": {
      "type": "local",
      "command": ["npx", "-y", "@anthropic/mcp-gmail"],
      "environment": {
        "GMAIL_CREDENTIALS": "{env:GMAIL_CREDENTIALS}"
      }
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@anthropic/mcp-github"],
      "environment": {
        "GITHUB_TOKEN": "{env:GITHUB_TOKEN}"
      }
    }
  },
  "settings": {
    "defaultLimit": 5,
    "initMode": "eager",
    "connection": {
      "connectTimeout": 5000,
      "requestTimeout": 30000,
      "retryAttempts": 2,
      "retryDelay": 1000
    }
  }
}
